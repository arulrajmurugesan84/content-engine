{
  "jsonCollection": ["product", "supplier", "store"],
  "dataConfig": [
    {
      "fieldName": "productName",
      "path": "$.product.name",
      "type": "string",
      "required": true
    },
    {
      "fieldName": "productPrice",
      "path": "$.product.price",
      "type": "number",
      "format": {
        "type": "currency",
        "currency": "USD",
        "locale": "en_US",
        "fraction": 2
      }
    },
    {
      "fieldName": "supplierName",
      "path": "$.supplier.name",
      "type": "string",
      "default": "UNKNOWN SUPPLIER"
    },
    {
      "fieldName": "addressLine1",
      "type": "string",
      "conditionalPaths": [
        "$.store.mailingAddress.line1",
        "$.store.physicalAddress.line1"
      ],
      "required": true
    },
    {
      "fieldName": "stores",
      "type": "array",
      "path": "$.store.locations[*]",
      "fields": [
        {
          "fieldName": "city",
          "path": "$.city",
          "type": "string"
        },
        {
          "fieldName": "zip",
          "path": "$.zip",
          "type": "string",
          "default": "00000"
        }
      ]
    },
    {
      "fieldName": "discountedPrice",
      "type": "number",
      "expression": "#product?.price?:0 > 25 ? #product.price - 5 : #product?.price?:0"
    }
  ]
}
